@using System.Collections.Generic;
@using Freelancer.Model.Models.CustomerPet


@model Tuple<List<CustomerPet>, int>

@{
    int ind = 0;
}
@foreach (var Pet in Model.Item1)
            {  
        <tr>
            <td>
                <div id="PetCollection@(ind)">

                    <input id="PetCollection_@(Pet.AnimalId)" class="PetCollections"
                           name="PetCollection[@(ind)].Name" type="hidden" value="@Pet.Name" />@Pet.Name
                        <input id="PetCollectionId_@(Pet.AnimalId)"
                               name="PetCollection[@(ind)].AnimalId" type="hidden" value="@Pet.AnimalId" />






                        <input id="PetCollectionName_@(Pet.AnimalId)" class="PetCollectionNames" placeholder="Pet Name"
                               style="display: block;    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;"
                          
                               name="PetCollection[@ind].PetName" type="text" value="@Pet.PetName" />
                    </div>
                </td>

                <td>

                    <button id="RemoveObject@(ind+"+p")" onclick="RemoveObjectPet('PetCollection@(ind)')" type="button" style="margin-top: 5px" type="button" class="btn btn-block btn-danger btn-xs">Remove Pet</button>

                </td>
            </tr>


    ind++;
}


