@ViewBag.Titile
<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3></h3>
                <p>New Employee</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="@Url.Action("Index", "Employee")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
